{
  "name": "@model-context-protocol/core",
  "version": "0.1.0",
  "private": false,
  "description": "Core implementation of the Model Context Protocol (MCP), a protocol for communication between LLMs and their context",
  "type": "module",
  "license": "MIT",
  "author": "Drengskapur",
  "packageManager": "pnpm@8.15.4",
  "homepage": "https://github.com/drengskapur/model-context-protocol#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drengskapur/model-context-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/drengskapur/model-context-protocol/issues"
  },
  "keywords": [
    "llm",
    "ai",
    "protocol",
    "json-rpc",
    "typescript",
    "context",
    "agent",
    "tools",
    "resources",
    "prompts",
    "sse",
    "stdio"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./inMemory": {
      "types": "./dist/inMemory.d.ts",
      "import": "./dist/inMemory.js",
      "require": "./dist/inMemory.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "SECURITY.md",
    "CODE_OF_CONDUCT.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "preversion": "pnpm run lint && pnpm run test",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "valibot": "^0.28.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsup": "^8.0.2",
    "turbo": "^2.4.2",
    "typescript": "^5.3.3",
    "ultracite": "^4.1.19",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
      "pnpm typecheck",
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run"
    ]
  }
}
