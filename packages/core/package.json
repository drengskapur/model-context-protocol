{
  "name": "@model-context-protocol/core",
  "version": "0.1.0-rc.1",
  "private": false,
  "description": "Core implementation of the Model Context Protocol (MCP) with TypeScript",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./in-memory": {
      "types": "./dist/in-memory.d.ts",
      "import": "./dist/in-memory.js",
      "require": "./dist/in-memory.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist coverage",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "preversion": "pnpm run lint && pnpm run test",
    "postversion": "git push && git push --tags",
    "test": "mkdir -p coverage && vitest run --coverage",
    "test:coverage": "mkdir -p coverage && vitest run --coverage --reporter=default",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "version": "pnpm run format && git add -A src"
  },
  "dependencies": {
    "valibot": "1.0.0-rc.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsup": "^8.3.6",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "ultracite": "^4.1.19",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
      "pnpm typecheck",
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run"
    ]
  }
}
