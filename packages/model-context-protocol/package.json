{
  "name": "model-context-protocol",
  "version": "0.1.0-rc.1",
  "private": false,
  "description": "Protocol for communication between LLMs and their context, enabling resource access, tool execution, and real-time updates",
  "author": "Drengskapur",
  "license": "MIT",
  "homepage": "https://github.com/drengskapur/model-context-protocol#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drengskapur/model-context-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/drengskapur/model-context-protocol/issues"
  },
  "keywords": [
    "llm",
    "ai",
    "protocol",
    "json-rpc",
    "typescript",
    "context",
    "agent",
    "tools",
    "resources",
    "prompts",
    "sse",
    "stdio"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./in-memory": {
      "types": "./dist/in-memory.d.ts",
      "import": "./dist/in-memory.js",
      "require": "./dist/in-memory.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.0",
    "valibot": "^0.28.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  }
}
