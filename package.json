{
  "name": "model-context-protocol",
  "version": "0.1.0-rc.1",
  "private": false,
  "description": "Protocol for communication between LLMs and their context, enabling resource access, tool execution, and real-time updates",
  "author": "Drengskapur",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "preversion": "pnpm run lint && pnpm run test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.0",
    "jose": "^5.2.2",
    "valibot": "^0.28.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.0.0",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
      "pnpm typecheck",
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run"
    ]
  }
}
