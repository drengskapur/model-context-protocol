{
  "name": "model-context-protocol-monorepo",
  "private": true,
  "description": "Model Context Protocol (MCP) monorepo - A protocol for communication between LLMs and their context",
  "type": "module",
  "license": "MIT",
  "author": "Drengskapur",
  "packageManager": "pnpm@8.15.4",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "prepare": "husky",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "turbo": "^2.4.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run"
    ]
  }
}
