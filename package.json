{
  "name": "@model-context-protocol/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "preversion": "pnpm run lint && pnpm run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.0.0",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
      "pnpm typecheck",
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@model-context-protocol/core": "workspace:0.1.0-rc.1",
    "zod": "^3.24.2"
  }
}
