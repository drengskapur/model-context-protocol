{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useTemplate": "warn",
        "useNodejsImportProtocol": "warn"
      },
      "nursery": {
        "useConsistentMemberAccessibility": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": ["src/schema.ts"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "ignore": [
      ".turbo/**/*",
      "**/*.generated.*",
      "**/gen/**/*",
      "**/generated/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "src/schema.ts"
    ]
  }
}
